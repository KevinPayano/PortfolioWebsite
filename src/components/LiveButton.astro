---
import '../styles/main.css';

interface Props {
    href: string;
}

const {href} = Astro.props
---

<a href={href} class="cursor-pointer inline-flex items-center justify-center px-5 py-2.5 text-sm font-sans font-medium text-center text-gray-200 border  rounded-md shrink-0 hover:bg-gray-950">
    Live site
    <svg class="w-4 h-4 text-gray-200 ml-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
    </svg>
</a>
