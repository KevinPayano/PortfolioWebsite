---
import '../styles/main.css';
---

<!-- Navigation Section Starts -->
<div class="fixed z-50 w-full h-16 max-w-lg -translate-x-1/2 backdrop-blur-md border border-gray-600 rounded-full bottom-4 left-1/2">
    <div class="grid h-full max-w-lg grid-cols-4 mx-auto">

        <!--Home Button Start-->
        <a href="index.html" class="cursor-pointer inline-flex flex-col items-center justify-center px-5 rounded-l-full hover:bg-gray-600/25 group">
          <img src="/assets/HomeButton.png" class="w-6 h-6 group-hover:invisible"/>
          <div class="absolute z-10 inline-block px-3 py-2 text-sm font-sans text-white transition-opacity duration-300 rounded-lg shadow-sm opacity-0 group-hover:opacity-100">
            Home
          </div>
        </a>
        <!--Home Button End-->

        <!--Project Button Start-->
        <a href="#projectSection" class="cursor-pointer inline-flex flex-col items-center justify-center px-5 hover:bg-gray-600/25 group">
          <svg class="w-6 h-6 text-gray-400 group-hover:invisible" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512">
            <path fill="currentColor" d="M472 472H40a24.028 24.028 0 0 1-24-24V64a24.028 24.028 0 0 1 24-24h186.667a23.935 23.935 0 0 1 22.154 14.77L269.333 104H472a24.028 24.028 0 0 1 24 24v320a24.028 24.028 0 0 1-24 24ZM48 440h416V136H248l-26.667-64H48Z"/>
          </svg>            
          <div class="absolute z-10 inline-block px-3 py-2 text-sm font-sans text-white transition-opacity duration-300 rounded-lg shadow-sm opacity-0 group-hover:opacity-100">
            Work
          </div>
        </a>
        <!--Project Button End-->

        <!--About Button Start-->
        <a href="#aboutSection" class="cursor-pointer inline-flex flex-col items-center justify-center px-5 hover:bg-gray-600/25 group">
          <svg class="w-6 h-6 text-gray-400 group-hover:invisible" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512"><path fill="currentColor" d="m411.6 343.656l-72.823-47.334l27.455-50.334A80.23 80.23 0 0 0 376 207.681V128a112 112 0 0 0-224 0v79.681a80.236 80.236 0 0 0 9.768 38.308l27.455 50.333l-72.823 47.334A79.725 79.725 0 0 0 80 410.732V496h368v-85.268a79.727 79.727 0 0 0-36.4-67.076ZM416 464H112v-53.268a47.836 47.836 0 0 1 21.841-40.246l97.66-63.479l-41.64-76.341A48.146 48.146 0 0 1 184 207.681V128a80 80 0 0 1 160 0v79.681a48.146 48.146 0 0 1-5.861 22.985L296.5 307.007l97.662 63.479A47.836 47.836 0 0 1 416 410.732Z"/>
          </svg>
          <div class="absolute z-10 inline-block px-3 py-2 text-sm font-sans text-white transition-opacity duration-300 rounded-lg shadow-sm opacity-0 group-hover:opacity-100">
            About  
          </div>
        </a>
        <!--About Button End-->

        <!--Contact Button Start-->
        <a href="#contactSection" class="cursor-pointer inline-flex flex-col items-center justify-center px-5 rounded-r-full hover:bg-gray-600/25 group">
          <svg class="w-6 h-6 text-gray-400 group-hover:invisible" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512"><path fill="currentColor" d="M16 112v384h480V112Zm220.8 229.6a32.167 32.167 0 0 0 38.4 0l23.467-17.6L464 448v16H48v-16l165.333-124ZM256 316L48 160v-16h416v16ZM48 200l138.667 104L48 408Zm416 208L325.333 304L464 200Z"/>
          </svg>            
          <div class="absolute z-10 inline-block px-3 py-2 text-sm font-sans text-white transition-opacity duration-300 rounded-lg shadow-sm opacity-0 group-hover:opacity-100">
            Contact
          </div>
        </a>
        <!--Contact Button End-->

    </div>
  </div>
  <!-- Navigation Section Ends -->