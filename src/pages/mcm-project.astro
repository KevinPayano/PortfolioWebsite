---
//Layout Imports
import MainLayout from '../layouts/MainLayout.astro';
import ProjectHero from '../layouts/ProjectHero.astro';
import ProjectInfo from '../layouts/ProjectInfo.astro';
import PS from '../layouts/P&S.astro';
import BackgroundVid from '../layouts/BackgroundVid.astro';
import Goals from '../layouts/Goals.astro';
import Review from '../layouts/Review.astro';
import Impact from '../layouts/Impact.astro';

//Component Imports
import Navigation from '../components/Navigation.astro';
import Tooltip from '../components/Tooltip.astro';
import LiveButton from '../components/LiveButton.astro';
import SolutionCard from '../components/SolutionCard.astro';
---

<MainLayout title='MCM Custom Builders Website | Kevin Payano Portfolio'>
    <ProjectHero 
    header='MCM Custom Builders' 
    paragraph='Explore our transformative collaboration with MCM Custom Builders, crafting a standout web design that reflects their values and boosts their online visibility.'>
        <video slot="project-bgImage" autoplay loop transition:name="cec-image" transition:persist class="object-center object-cover absolute inset-0 h-full w-full">
            <source src="/video/MCM-Home.mp4" type="video/mp4" />
        </video>
    </ProjectHero>

    <Navigation></Navigation>

    <ProjectInfo 
    projectHeader='MCM Custom Builders'
    projectDescription='We aimed to boost MCM Custom Builders digital presence, creating a standout website that showcased their expertise and attracted a broader audience seeking construction and renovation services.'
    clientHeader='Client'
    client='MCM Custom Builders'
    roleHeader='Role'
    role='Web Designer'
    toolsHeader='Tools'
    yearHeader='Year'
    year='2023'>

        <!-- Figma -->
        <Tooltip slot="tooltips" tooltext="Figma">
            <svg class="w-6 h-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><path fill="currentColor" d="M15.332 8.668a3.333 3.333 0 0 0 0-6.663H8.668a3.333 3.333 0 0 0 0 6.663a3.333 3.333 0 0 0 0 6.665a3.333 3.333 0 0 0 0 6.664A3.334 3.334 0 0 0 12 18.664V8.668h3.332z"/><circle cx="15.332" cy="12" r="3.332" fill="currentColor"/></svg>
        </Tooltip>

        <!-- Webflow -->
        <Tooltip slot="tooltips" tooltext="Webflow">
            <svg class="w-6 h-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><path fill="currentColor" d="M17.802 8.56s-1.946 6.103-2.105 6.607a4778.8 4778.8 0 0 0-1.484-11.473c-3.316 0-5.089 2.36-6.026 4.851l-2.565 6.637c-.015-.476-.36-6.565-.36-6.565c-.204-3.052-3-4.91-5.262-4.91l2.739 16.6c3.474-.015 5.347-2.361 6.328-4.852c0 0 2.09-5.398 2.176-5.643c.015.23 1.5 10.494 1.5 10.494c3.488 0 5.362-2.202 6.37-4.606L24 3.708c-3.445 0-5.261 2.346-6.198 4.851Z"/></svg>
        </Tooltip>

        <LiveButton slot='buttons' href=''/>

    </ProjectInfo>

    <Goals
      header="Objectives"
      subheading='Creating MCMs Online Presence'
      paragraphOne='In a meeting with MCM Custom Builders owner, we talked about creating a unique website showcasing their expertise and core values. We also considered transparent service pages and SEO integration to boost online presence.'
      paragraphTwo=''>

        <SolutionCard
        slot='solutionCard'
        header='Goals'
        paragraph='List of Goals Set During the Project'
        pointOne='Build a Unique and Captivating Design'
        pointTwo='SEO Integration'
        pointThree='Build Comprehensive Process Section'
        pointFour='Streamlined Service Presentation'/>

    </Goals>

    <Review
        title='Standout From The Crowd'
        header='Innovative Process Showcase'
        paragraphOne='To set MCM Custom Builders apart from competitors, we opted for an engaging image and video slideshow to illustrate the processes of each service. Unlike traditional text-based lists, this dynamic approach offers an immersive and visually captivating experience for visitors, making information more accessible and memorable.'></Review>

    <BackgroundVid>
      <source src="/video/MCM-Process.mp4" type="video/mp4" />
    </BackgroundVid>

    <Impact></Impact>

</MainLayout>

