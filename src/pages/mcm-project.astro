---
import Navigation from '../components/Navigation.astro';
import MainLayout from '../layouts/MainLayout.astro';
import ProjectHero from '../layouts/ProjectHero.astro';
import ProjectInfo from '../layouts/ProjectInfo.astro';
import Tooltip from '../components/Tooltip.astro';
---

<MainLayout title='MCM Custom Builders Website | Kevin Payano Portfolio'>
    <ProjectHero 
    header='MCM Custom Builders' 
    paragraph='Discover how a strategic redesign transformed a concrete contractor website into a user-friendly hub.'>
      <img slot="project-bgImage" alt="" src="assets/MCM-Website.jpg" transition:name="mcm-image" class="object-center object-cover inset-0 absolute h-full w-full" alt="...">
    </ProjectHero>

    <Navigation></Navigation>

    <ProjectInfo 
    projectHeader='MCM Custom Builders'
    projectDescription='Discover how a strategic redesign transformed a concrete contractor website into a user-friendly hub.'
    clientHeader='Client'
    client='MCM Custom Builders'
    roleHeader='Role'
    role='Web Designer'
    toolsHeader='Tools'
    yearHeader='Year'
    year='2023'>

        <!-- Figma -->
        <Tooltip slot="tooltips" tooltext="Figma">
            <svg class="w-6 h-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><path fill="currentColor" d="M15.332 8.668a3.333 3.333 0 0 0 0-6.663H8.668a3.333 3.333 0 0 0 0 6.663a3.333 3.333 0 0 0 0 6.665a3.333 3.333 0 0 0 0 6.664A3.334 3.334 0 0 0 12 18.664V8.668h3.332z"/><circle cx="15.332" cy="12" r="3.332" fill="currentColor"/></svg>
        </Tooltip>

        <!-- Webflow -->
        <Tooltip slot="tooltips" tooltext="Webflow">
            <svg class="w-6 h-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><path fill="currentColor" d="M17.802 8.56s-1.946 6.103-2.105 6.607a4778.8 4778.8 0 0 0-1.484-11.473c-3.316 0-5.089 2.36-6.026 4.851l-2.565 6.637c-.015-.476-.36-6.565-.36-6.565c-.204-3.052-3-4.91-5.262-4.91l2.739 16.6c3.474-.015 5.347-2.361 6.328-4.852c0 0 2.09-5.398 2.176-5.643c.015.23 1.5 10.494 1.5 10.494c3.488 0 5.362-2.202 6.37-4.606L24 3.708c-3.445 0-5.261 2.346-6.198 4.851Z"/></svg>
        </Tooltip>

    </ProjectInfo>

    <!-- Video Case Study Section Start -->
    <section class="h-screen bg-[#010105]">
        <div class="py-8 px-4 mx-auto max-w-screen-xl lg:px-12 sm:text-center lg:py-16">
            <h2 class="mb-4 text-4xl tracking-tight font-mono text-gray-100">Video Case Study</h2>
            <iframe class="mx-auto mt-8 w-full max-w-2xl h-full rounded-lg lg:mt-12 sm:h-96" src="https://www.youtube.com/embed/4bnJG2UDr9A" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
    </section>
    <!-- Video Case Study Section End -->

</MainLayout>

