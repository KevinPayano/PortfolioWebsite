        <LiveButton slot='buttons' href=''/>

    </ProjectInfo>

    <PS>
        <ProblemCard 
        slot='problemCard'
        header='Problems'
        paragraph='Heres a list of problems the stake holder had with his website.'
        pointOne='No SEO'/>

      <SolutionCard
        slot='solutionCard'
        header='Solutions'
        paragraph='Heres a list of solutions the stake holder had with his website.'
        pointOne='Implement SEO'/>

    </PS>

