---
//Layout Imports
import MainLayout from '../layouts/MainLayout.astro';
import ProjectHero from '../layouts/ProjectHero.astro';
import ProjectInfo from '../layouts/ProjectInfo.astro';
import PS from '../layouts/P&S.astro';
import BackgroundVid from '../layouts/BackgroundVid.astro';

//Component Imports
import Navigation from '../components/Navigation.astro';
import Tooltip from '../components/Tooltip.astro';
import GithubButton from '../components/GithubButton.astro';
import LiveButton from '../components/LiveButton.astro';
---

<MainLayout title='CEC Website | Kevin Payano Portfolio'>
    <ProjectHero 
    header='Concrete Experts Company' 
    paragraph='Discover how a strategic redesign transformed a concrete contractor website into a user-friendly hub.'>
      <video slot="project-bgImage" autoplay loop transition:name="cec-image" transition:persist class="object-center object-cover absolute inset-0 h-full w-full">
        <source src="/video/CEC-Home.mp4" type="video/mp4" />
      </video> 
    </ProjectHero>

    <Navigation></Navigation>

    <ProjectInfo 
      projectHeader='Concrete Experts Company'
      projectDescription='Discover how a strategic redesign transformed a concrete contractor website into a user-friendly hub.'
      clientHeader='Client'
      client='Concrete Experts Company'
      roleHeader='Role'
      role='Web Designer'
      toolsHeader='Tools'
      yearHeader='Year'
      year='2023'>

      <!-- Figma -->
      <Tooltip slot="tooltips" tooltext="Figma">
