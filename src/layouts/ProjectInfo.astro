---
import GithubButton from '../components/GithubButton.astro';
import LiveButton from '../components/LiveButton.astro';

interface Props {
    projectHeader: string;
    projectDescription: string;
    clientHeader: string;
    client: string;
    roleHeader: string;
    role: string;
    toolsHeader: string;
    yearHeader: string;
    year: string;
}

const {projectHeader} = Astro.props;
const {projectDescription} = Astro.props;
const {clientHeader} = Astro.props;
const {client} = Astro.props;
const {roleHeader} = Astro.props;
const {role} = Astro.props;
const {toolsHeader} = Astro.props;
const {yearHeader} = Astro.props;
const {year} = Astro.props;
---

<!-- Hero 2 Section Starts -->
<section class="bg-[#010105]">
    <div class="h-screen gap-12 mx-auto max-w-screen-xl grid content-center lg:grid-cols-2">
        
        <!-- Left Side -->
        <div class="text-gray-500 sm:text-lg">
            <h2 class="mb-4 text-6xl tracking-tight font-IBMPlex text-gray-100">{projectHeader}</h2>
            <!--<slot name="tags" />-->
            <p class="mb-8 font-IBMPlex lg:text-xl">{projectDescription}</p>

            <div class="flex gap-4">
                <GithubButton href=''/>
                <LiveButton href=''/>
            </div>    
            
        </div>

        <!-- Right Side -->
        <div class="grid divide-y-2 divide-gray-800">

          <div class="grid grid-cols-2 content-center">
              <div class="text-left">
                  <h3 class="font-bold text-gray-100 text-xl">{clientHeader}</h3>
              </div>
              <div class="text-right">
                  <p class="text-gray-500">{client}</p>
              </div>
          </div>

          <div class="grid grid-cols-2 content-center">
            <div class="text-left">
                <h3 class="font-bold text-gray-100 text-xl">{roleHeader}</h3>
            </div>
            <div class="text-right">
                <p class="text-gray-500">{role}</p>
            </div>
          </div>

          <div class="grid grid-cols-2 content-center">

            <div class="text-left">
                <h3 class="font-bold text-gray-100 text-xl">{toolsHeader}</h3>
            </div>

            <div class="flex justify-end">

              <slot name="tooltips" />

            </div>
            
          </div>

          <div class="grid grid-cols-2 content-center">
            <div class="text-left">
                <h3 class="font-bold text-gray-100 text-xl">{yearHeader}</h3>
            </div>
            <div class="text-right">
                <p class="text-gray-500">{year}</p>
            </div>
          </div>


      </div>

    </div>
</section>
<!-- Hero 2 Section Ends -->