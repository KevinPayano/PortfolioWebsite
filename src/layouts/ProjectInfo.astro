---
import '../styles/main.css';

interface Props {
    projectHeader: string;
    projectDescription: string;
    clientHeader: string;
    client: string;
    roleHeader: string;
    role: string;
    toolsHeader: string;
    yearHeader: string;
    year: string;
}

const {projectHeader} = Astro.props;
const {projectDescription} = Astro.props;
const {clientHeader} = Astro.props;
const {client} = Astro.props;
const {roleHeader} = Astro.props;
const {role} = Astro.props;
const {toolsHeader} = Astro.props;
const {yearHeader} = Astro.props;
const {year} = Astro.props;
---

<!-- Hero Section Starts -->
<section class="bg-[#010105]">
    <div class="px-4 py-24 gap-12 mx-auto max-w-screen-xl grid content-center lg:grid-cols-2">
        
        <!-- Left Side Start -->
        <div class="text-gray-300 sm:text-lg">
            <h2 class="mb-4 text-5xl tracking-tight font-mono text-gray-100">{projectHeader}</h2>
            <p class="mb-8 font-sans font-light lg:text-xl">{projectDescription}</p>

            <!-- Buttons Slot -->
            <div class="flex flex-col md:flex-row gap-4">
              <slot name="buttons"/>
            </div>      
        </div>
        <!-- Left Side End -->

        <!-- Right Side Start -->
        <div class="grid divide-y-2 divide-gray-900">

          <div class="grid grid-cols-2 py-3 content-center">
            <div class="text-left">
                <h3 class="font-sans font-medium text-gray-100 text-xl">{clientHeader}</h3>
            </div>
            <div class="text-right">
                <p class="text-gray-300 font-sans">{client}</p>
            </div>
          </div>

          <div class="grid grid-cols-2 py-3 content-center">
            <div class="text-left">
                <h3 class="font-sans font-medium text-gray-100 text-xl">{roleHeader}</h3>
            </div>
            <div class="text-right">
                <p class="text-gray-300 font-sans">{role}</p>
            </div>
          </div>

          <div class="grid grid-cols-2 py-3 content-center">
            <div class="text-left">
                <h3 class="font-sans font-medium text-gray-100 text-xl">{toolsHeader}</h3>
            </div>
            <div class="flex justify-end">
              <slot name="tooltips" />
            </div>  
          </div>

          <div class="grid grid-cols-2 py-3 content-center">
            <div class="text-left">
                <h3 class="font-sans font-medium text-gray-100 text-xl">{yearHeader}</h3>
            </div>
            <div class="text-right">
                <p class="text-gray-300 font-sans">{year}</p>
            </div>
          </div>

        </div>
        <!-- Right Side End -->

    </div>
</section>
<!-- Hero Section Ends -->