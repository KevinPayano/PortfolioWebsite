---
interface Props {
    title: string;
    header: string;
    paragraph: string;
};

const {title} = Astro.props;
const {header} = Astro.props;
const {paragraph} = Astro.props;
---

<section class="h-screen grid content-center bg-gradient-to-b from-[#010105] via-[#010105]/20 to-[#010105]">

    <!-- Container Starts -->
    <div class="max-w-screen-xl py-8 lg:py-16 px-4 mx-auto lg:px-6">

        <!-- Header & Description -->
        <div class="space-y-2">
            <p class="text-lg font-sans font-medium text-teal-500">{title}</p>
            <h2 class="text-3xl tracking-tight font-mono sm:text-4xl text-gray-50">{header}</h2>
            <p class="max-w-2xl font-light text-gray-400 sm:text-xl">{paragraph}</p>
        </div>

        <!-- Stats Start -->
        <slot name="stats"/>
        <!-- Stats End -->

    </div>
    <!-- Container Ends -->

</section>